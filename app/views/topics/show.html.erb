<div class="col-md-12">
  <h2>
    <%= @topic.subject %>
    <div class="pull-right">
      <%= link_to "Back", topics_path, class: "btn btn-default btn-link" %>
      <% if topic_author?(@topic) %>
        <%= link_to "Edit", edit_topic_path(@topic), class: "btn btn-default btn-link" %>
        <%= link_to "Delete", topic_path(@topic), method: :delete, class: "btn btn-default btn-link" %>
      <% end %>
    </div>
  </h2>

  <hr>

  <% @topic.posts.each do |post| %>
    <%= render "posts/panel", post: post %>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        Reply this topic
      </h3>
    </div>
    <div class="panel-body">
      <% if user_signed_in? %>
        <%= form_for @topic.posts.build, url: topic_posts_path(@topic) do |f| %>
          <%= render 'posts/form', f: f %>

          <%= submit_tag 'Post', class: "btn btn-block btn-primary" %>
        <% end %>
      <% else %>
        <p>
          Please
          <%= link_to "log in", new_user_session_path %>
          or
          <%= link_to "sign up", new_user_registration_path %>
          to reply this topic.
        </p>
      <% end %>
    </div>
  </div>
</div>
